<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.TextArea ?>
<?import javafx.scene.control.TextField ?>
<?import javafx.scene.layout.GridPane ?>
<?import javafx.scene.layout.VBox ?>

<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@style.css" styleClass="v-box">
	<TextArea fx:id="descriptionField" promptText="Nazwa i opis artykułu" />
	
	<GridPane fx:id="form" styleClass="grid-pane">
		<Label text="Nr artykułu" GridPane.columnIndex="0" GridPane.rowIndex="0" />
		<Label fx:id="artIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
		
		<Label text="Cena jednostkowa" GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<Label fx:id="unitPriceLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
		
		<Label text="Ilość" GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<TextField fx:id="itemCountField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		
		<Label text="Wartość netto" GridPane.columnIndex="0" GridPane.rowIndex="4" />
		<Label fx:id="totalPriceLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
	</GridPane>
	
	<TextArea fx:id="commentField" promptText="Uwagi" />
</VBox>